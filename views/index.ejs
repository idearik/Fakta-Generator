<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random Fact Generator</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="fact-container">
            <div class="year-section"><%= year %></div>
            <div class="fact-section"><%= fact %></div>
            <button onclick="getNewFact()">More Random Fact</button>
        </div>
    </div>
    <script>
        async function getNewFact() {
            const response = await fetch('/fact');
            const data = await response.json();
            document.querySelector('.year-section').textContent = data.year;
            document.querySelector('.fact-section').textContent = data.fact;
        }
    </script>
</body>
</html>
